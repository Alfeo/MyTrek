{% extends 'base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<img class="illustration-fix" src="{{ asset('img/women.jpeg') }}">

<div class="col-md-12">
	<form action="{{ path("user_login_check") }}" method="post">

		<div class="col-md-6 col-md-offset-3 form-global">
			<div class="col-md-12 form-title">
				<h3>Connexion</h3>
			</div>

			<div class="col-md-12 form-title">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				
	    		<div class="col-md-412 form-title">
			    	Nom d'utilisateur :
			    </div>
				<div class="col-md-12 form-title">
					<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
			    </div>

			</div>

			<div class="col-md-12">
	    		<div class="col-md-12 form-title">
			    	Mot de passe :
			    </div>
				<div class="col-md-12 form-title">
					<input type="password" id="password" name="_password" required="required" />
			    </div>
			</div>

			<div class="col-md-12">
	    		<div class="col-md-12 form-title">
			    	Se souvenir de moi :
			    </div>
				<div class="col-md-12 form-title">
					<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
			    </div>
			</div>

	    	<div class="col-md-12 form-title">
		        <input class="btn btn-success" type="submit" id="_submit" name="_submit" value="Se connecter" />
		    </div>
		</div>
	</form>
</div>

{% endblock %}
